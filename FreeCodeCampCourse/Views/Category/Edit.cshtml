@model FreeCodeCampCourse.Models.Category
@*You don't need the asp-action="Edit" because the view is called Edit, the same name as the post action.*@
@*asp-action is optional*@
<form method="post">
    @*This includes the Id as well in the POST EDIT action*@
    @*The POST -EDIT action in CategoryController needs the record Id to work.*@
    <input asp-for="Id" hidden />
    @*Use Bootstrap classes*@
    <div class="border p-3">
        @*Validation summary was removed, not needed.*@
        <div class="form-group row">
            <h2 class="text-info p1-3">Edit Category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CategoryName" class="form-control" />
                        @*You need to do validation on the server side*@
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            @*Since the Index belongs to the same controller, we don't need to specify it*@
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*keep this class empty*@
            </div>
        </div>
    </div>
</form>
@*This does the validation on the client side instead of on the server.*@
@section Scripts {

    @{ <partial name="_ValidationScriptsPartial" /> }
}


