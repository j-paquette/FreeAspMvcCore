@model FreeCodeCampCourse.Models.ApplicationType
@*You don't need the asp-action="Delete" because the view is called Delete, the same name as the post action.*@
@*asp-action is optional*@
<form method="post" asp-action="DeletePostApplicationType">
    @*This includes the Id as well in the POST DELETE action*@
    @*The POST -DELETE action in CategoryController needs the record Id to work.*@
    <input asp-for="ApplicationTypeId" hidden />
    @*Use Bootstrap classes*@
    <div class="border p-3">
        @*Validation summary was removed, not needed.*@
        <div class="form-group row">
            <h2 class="text-info p1-3">Delete Application Type</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationTypeName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @*<input type="submit" class="btn btn-danger w-100" value="Delete" />*@
                            <button type="submit" class="btn btn-danger w-100" value="Delete">
                                <i class="far fa-trash-alt"></i> &nbsp; Delete
                            </button>
                        </div>
                        <div class="col">
                            @*Since the Index belongs to the same controller, we don't need to specify it*@
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i> &nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*keep this class empty*@
            </div>
        </div>
    </div>
</form>
@*This does the validation on the client side instead of on the server.*@
@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

